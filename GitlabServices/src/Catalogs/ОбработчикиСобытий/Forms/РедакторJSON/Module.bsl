Процедура ПриСозданииНаСервере( Отказ, СтандартнаяОбработка )
	
	Если ( Параметры.КлючЗаписи.Пустой() ) Тогда
		
		Возврат;
		
	КонецЕсли;
	
	УстановитьВидФормы( Параметры.ИмяКоманды );
	ЗаполнитьДанныеФормы( Параметры.КлючЗаписи );

КонецПроцедуры

